<%- include header%>

<div>


<% projects.forEach(function (project, index) { %>
<p><h2><a href="#"><%= project.projectId %></a></h2></p>
<p><h2><a href="#"><%= project.projectName %></a></h2></p>
<p><h2><a href="#"><%= project.projectSort %></a></h2></p>
<p><h2><a href="#"><%= project.projectRule %></a></h2></p>
<p><h2><a href="#"><%= project.scoreBest %></a></h2></p>
    <form method="post" action="/">
        标题:<br />
        <input type="text" name="projectId" value="<%= project.projectId %>" /><br />
        正文:<br />
        <button type="submit" value="删除">删除</button>
    </form>

<% }) %>
</div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modal title</h4>
            </div>
            <div class="modal-body">
                <form id="loginform" class="form-horizontal" role="form" method="post" action="/update">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" type="text" class="form-control" name="projectId" value="" placeholder="请输入项目号">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="text" class="form-control" name="projectName" placeholder="请输入项目名">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="text" class="form-control" name="projectRule" placeholder="请输入项目规则">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="text" class="form-control" name="projectSort" placeholder="请输入项目类型">
                    </div>


                    <div style="margin-top:10px" class="form-group">
                        <div class="col-sm-12 text-center controls">
                            <input type="submit"  class="btn btn-primary btn-lg btn-block" value="修改"/>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                Don't have an account!
                                <a href="/reg" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                                    Sign Up Here
                                </a>
                                <% if (success) { %>
                                <div><%= success %></div>
                                <% } %>
                                <% if (error) { %>
                                <div style="color: red;"><%= error %> </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


<%- include footer%>
