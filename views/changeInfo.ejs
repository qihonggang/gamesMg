<%- include pages/stu_header %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= title%></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    全部学生
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th>学号</th>
                                <th>姓名</th>
                                <th>性别</th>
                                <th>所在专业</th>
                                <th>密码</th>
                                <th>操作</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <form id="_changeInfoform" method="post" action="/changeInfo_remove">
                                    <input type="hidden" name="studentID" value="<%=user.studentID %>" />
                                </form>
                                <td><%=user.studentID %></td>
                                <td><%= user.name %></td>
                                <td><%= user.sex %></td>
                                <td><%= user.faculty %></td>
                                <td><%= user.password %></td>
                                <td>
                                    <a  href="" data-toggle="modal" data-target="#changeInfo_updateModal">修改</a>
                                    &nbsp;|&nbsp;
                                    <a href="" onclick="document.getElementById('_changeInfoform').submit(); return false ">删除</a>
                                </td>
                                <!-- 修改模态框 -->
                                <div class="modal fade" id="changeInfo_updateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <form class="form-horizontal" role="form" method="post" action="/changeInfo_update">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                    <h4 class="modal-title" id="myModalLabel">修改学生信息</h4>
                                                </div>
                                                <div class="modal-body">


                                                    <div style="margin-bottom: 25px" class="input-group">
                                                        <input id="login-username" type="hidden" class="form-control" name="studentID"  value="<%= user.studentID%>" placeholder="请输入学号">
                                                    </div>

                                                    <div style="margin-bottom: 25px" class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-th-large"></i></span>
                                                        <input id="login-password" type="text" class="form-control" name="name" value="<%= user.name%>" placeholder="请输入姓名">
                                                    </div>

                                                    <div style="margin-bottom: 25px" class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-th-large"></i></span>
                                                        <input id="login-password" type="text" class="form-control" name="sex" value="<%= user.sex%>" placeholder="请输入性别">
                                                    </div>

                                                    <div style="margin-bottom: 25px" class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-th-large"></i></span>
                                                        <input id="login-password" type="text" class="form-control" name="faculty" value="<%= user.faculty%>" placeholder="请输入系别">
                                                    </div>

                                                    <div style="margin-bottom: 25px" class="input-group">
                                                        <span class="input-group-addon"><i class="glyphicon glyphicon-th-large"></i></span>
                                                        <input id="login-password" type="text" class="form-control" name="password" value="<%= user.password%>" placeholder="请输入密码">
                                                    </div>

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                                                    <button type="submit" class="btn btn-primary">确认修改</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </tr>

                            </tbody>
                        </table>

                        <!-- 反馈-->
                        <div class="row">
                            <div class="col-md-10">

                            </div>
                            <div class="col-lg-2">
                                <% if(error) {%>
                                <span><%= error%></span>
                                <% } if (success) {%>
                                <span><%= success %> </span>
                                <%} %>
                            </div>
                        </div>


                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <!-- /.row -->
</div>
<!-- /#page-wrapper -->

<%- include pages/stu_footer %>